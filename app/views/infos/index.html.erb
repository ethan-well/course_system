<style>
  .well2{
    height: auto;
    padding: 19px;
    margin-bottom: 20px;
    background-color: #f5f5f5;
    border: 1px solid #e3e3e3;
    border-radius: 4px;
    /*-webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05);*/
    /*box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05);*/
  }
</style>
<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <%= link_to '选课系统', root_path, class: :'navbar-brand' %>
    </div>
  </div>
</nav>

<div class="row">
  <%= render 'flash'%>
</div>

<div class="container theme-showcase" role="main">
  <div class="page-header">
    <h1>学生信息</h1>
  </div>
  <div class="row">
    <div class="col-md-8">
      <div class="well">
        <table class="table">
            <thead>
              <tr>
                <th>#</th>
                <th>姓名</th>
                <th>课程</th>
                <th>查询</th>
              </tr>
            </thead>
            <tbody>
              <% @students.each do |student|%>
                <tr>
                  <td><%= student.id %></td>
                  <td><%= student.name%></td>
                  <td>
                    <% student.courses.each do |course|%>
                      <%= course.name %>&nbsp;&nbsp;&nbsp;
                    <% end %>
                  </td>
                  <td><%= link_to '以Json返回该名学生的所有课程与对应代课老师的信息', student_path(student), target: "_blank" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
      </div>
    </div>
  </div>

  <div class="page-header">
  <h1 style="display: inline-block">教师信息</h1>
    <%= link_to '以Json返回所有的老师及其所带课程的信息', teachers_path, target: "_blank"%>
  </div>
  <div class="row">
    <div class="col-md-8">
      <div class="well">
        <table class="table">
            <thead>
              <tr>
                <th>#</th>
                <th>姓名</th>
                <th>课程</th>
                <th>操作</th>
              </tr>
            </thead>
            <tbody>
              <% @teachers.each do |teacher|%>
                <tr>
                  <td><%= teacher.id %></td>
                  <td><%= teacher.name%></td>
                  <td>
                    <% teacher.courses.each do |course|%>
                      <%= course.name %>&nbsp;&nbsp;&nbsp;
                    <% end %>
                  </td>
                  <td><%= link_to '删除该老师与所带课程的全部信息', teacher_path(teacher), method: :DELETE, data: {confirm: '确认删除?'} %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
      </div>
    </div>
  </div>
</div>
